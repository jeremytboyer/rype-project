<h1>Dashboard</h1>

<!-- Form to add a new thought -->
<form action="/thought" method="POST">
  <input name="title" type="text" placeholder="Recipe Name">
  <textarea name="text" placeholder="" rows="4"></textarea>
  <button type="submit">Save</button>
</form>

<ul>
  {{#each thoughts}}
    <li class="titleBar">
      <h1>{{title}}</h1>
    </li>
    <li class= "textBar">
      <p>{{text}}</p>
      
    </li>
    <button class= "removeButton"  recipe-id="{{id}}" style="font-size: 25px; padding: 5px;" >&#128465;</button>
   <script src="/js/removeCustomR"></script>
  {{/each}}
</ul>

