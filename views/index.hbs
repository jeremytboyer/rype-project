<section class="hero flex flex-col justify-center items-center ">
  <img src="" alt="">
  <h1 class="text-2xl mt-4">Search recipes by Ingredients</h1>
  <input
    type="text"
    name="search-input"
    id="search-input"
    placeholder="e.g. Steak, Egg"
  />
  <button id="search-button" class="btn mt-2 px-10 py-2 my-0 font-bold text-sky-900 tracking-widest uppercase border-2 border-sky-900 hover:bg-sky-900 hover:text-orange-400 
    ">Submit</button>

</section>


<main class="recipes flex p-5 flex-wrap">
  
</main>
<!-- Output each user's email address, using a handlebars each loop -->
<ul>
  {{#each thoughts}}
    <li>
      <p>{{text}}</p>
    </li>
    {{/each}}
  </ul>
  <h3>Instructions:</h3>
  <p id="recipe-instructions">{{text}}</p>
  <h3>Nutritional Facts:</h3>
  <p id="recipe-nutrition">{{text}}</p>
</div>

<script src="/js/search.js"></script>